@page "{Id:int}"
@model IndexModel
@{
    ViewData["Title"] = "Overview";
}

<h1>Overview</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Machine name</th>
            <th>Field name</th>
            <th>Task ETA</th>
            <th>Stop machine</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var machine in Model.activeMachines)
        {
            <tr>
                <td>@machine.MachineName</td>
                <td>@machine.FieldName</td>
                <td>@machine.TimeLeft</td>
                <td>
                    <form method="delete">
                        <button asp-page-handler="Delete" asp-route-id="@machine.Id" class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>