@page 
@model IndexModel
@{
    ViewData["Title"] = "Overview";
}

<h1>Overview</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Machine name</th>
            <th>Field name</th>
            <th>Task ETA</th>
            <th>Stop machine</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.activeMachines != null)
        {
            @foreach (var machine in Model.activeMachines)
            {
                <tr>
                    <td>@machine.MachineName</td>
                    <td>@machine.FieldName</td>
                    <td>@machine.TimeLeft</td>
                    <td>
                        <form method="post" asp-action="DeleteActiveMachine" asp-route-id="@machine.Id" >
                            <a asp-controller="Administration" asp-action="EditUser"
                               asp-route-id="@machine.Id" class="btn btn-primary">Edit</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>